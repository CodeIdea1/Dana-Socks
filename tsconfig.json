{
  "compilerOptions": {
    "target": "ES2017", // إصدار JavaScript المستهدف
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false, // عدم السماح بملفات JavaScript
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.js" // إضافة ملف next.config.js للتحقق منه
  ],
  "exclude": ["node_modules"]
}
